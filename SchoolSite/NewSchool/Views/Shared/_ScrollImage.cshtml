@using NewSchool.Util
@using SchoolDAO
@{
    List<ScrollImage> scrollImages = ImageUtil.GetScroll();
    
}



<div class="carousel slide" data-ride="carousel" id="scroolId" style="height: 300px;overflow: hidden;margin-top: -20px;">
    <ol class="carousel-indicators">
        <li data-target="#scroolId" data-slide-to="0" class="active"></li>
        <li data-target="#scroolId" data-slide-to="1" class=""></li>
        <li data-target="#scroolId" data-slide-to="2" class=""></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            @if (scrollImages.Count > 0)
            {
                 @:<img data-src="holder.js/1000x500/auto/#777:#777" alt="900x500" style="width: 1000px;height: 300px;" src="@Url.Action("GetImage","Scroll",new {id=scrollImages[0].Id})" data-holder-rendered="true">
            }
            else
            {
                 @:<img data-src="holder.js/1000x500/auto/#777:#777" alt="900x500" style="width: 1000px;height: 300px;" src="@Url.Content("~/Content/images/1.png")" data-holder-rendered="true">
            }
            <div class="carousel-caption">
               
            </div>
        </div>
        <div class="item">
            @if (scrollImages.Count > 1)
            {
                @:<img data-src="holder.js/1000x500/auto/#777:#777" alt="900x500" style="width: 1000px;height: 300px;" src="@Url.Action("GetImage","Scroll",new {id=scrollImages[1].Id})" data-holder-rendered="true">
            }
            else
            {
                @:<img data-src="holder.js/1000x500/auto/#666:#666" alt="900x500" style="width: 1000px;height: 300px;" src="@Url.Content("~/Content/images/2.png")" data-holder-rendered="true">
            }
            <div class="carousel-caption">
              
            </div>
        </div>
        <div class="item">
            @if (scrollImages.Count > 2)
            {
                @:<img data-src="holder.js/1000x500/auto/#777:#777" alt="900x500" style="width: 1000px;height: 300px;" src="@Url.Action("GetImage","Scroll",new {id=scrollImages[2].Id})" data-holder-rendered="true">
            }
            else
            {
                @:<img data-src="holder.js/1000x500/auto/#555:#5555" alt="900x500" style="width: 1000px;height: 300px;" src="@Url.Content("~/Content/images/3.png")" data-holder-rendered="true">
            }
            <div class="carousel-caption">
               
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#scroolId" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#scroolId" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
